#include <stdio.h>

int main() {
    int a;
    printf("1) Введите число в 16-ричной сс: ");
    scanf("%x", &a); // %x - 16-ричная сс

    printf("2) Число в 8-ричной сс: %o \n", a); // %o - 8-ричная сс

    printf("3) Число в 16-ричной сс: %x \n", a);
    printf("Число, сдвинутое на 2 битa влево: %x\n", a << 2); // << - сдвиг влево

    printf("4) Число, после применения к нему битовой операции отрицания: %x\n", ~a); // ~ - битовая операция отрицания

    int b;
    printf("5) Введите число в 16-ричной сс: ");
    scanf("%x", &b);
    printf("Рузультат операции ИЛИ: %x", a | b); // | - битовая операция ИЛИ
    return 0;
}
